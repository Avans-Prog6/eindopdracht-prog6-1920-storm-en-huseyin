@model BeestjeOpJeFeestje.Models.BookingProcessData
@{
    ViewData["Title"] = "Default";
}

<div class="font-weight-bold">
    Booking Details
</div>
<div class="container-fluid" style="padding: 0">
    Datum: @Model.Booking.Date
    @if (@Model.Booking.BookingState == BookingState.Animals)
    {
        <div>Nog geen beestjes geselecteerd</div>
        <div>Nog geen accessoires geselecteerd</div>
    }
    @if (@Model.Booking.BookingState == BookingState.Accessories)
    {
        <div class="font-weight-bold" style="padding-top: 2em">
            Beestjes
        </div>
        <div class="container-fluid">
            <div class="row">
                @for (int i = 0; i < @Model.Animals.Count(); i++)
                {
                    <div class="col" style="padding: 0; padding-right: 2px; padding-left: 2px">
                        <img src="@Html.DisplayFor(modelItem => Model.Animals[i].PicturePath)" style="width: 100%; height: 100%; min-width: 2em; min-height: 2em" />
                    </div>
                }
            </div>
        </div>

        <div>Nog geen accessoires geselecteerd</div>
    }
</div>