@model IEnumerable<BeestjeOpJeFeestje.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Booking item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientInfo.FirstName)
                @Html.DisplayFor(modelItem => item.ClientInfo.LastName)
                <br/>
                @Html.DisplayFor(modelItem => item.ClientInfo.Address)
            </td>
            <td>
                <a asp-controller="Bookings" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-controller="Bookings" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
