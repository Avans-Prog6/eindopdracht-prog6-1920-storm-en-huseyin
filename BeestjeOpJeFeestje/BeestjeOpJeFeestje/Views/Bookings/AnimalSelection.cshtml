@model BeestjeOpJeFeestje.Models.BookingProcessData

@{
    ViewData["Title"] = "Edit";
}

<h2>Booking</h2>
<hr/>
<div class="row">
    <div class="col col-9">
        @if (Model.Booking.BookingState == BookingState.Animals)
        {
            @await Component.InvokeAsync("AnimalSelection", @Model)
        }

        @if (Model.Booking.BookingState == BookingState.Accessories)
        {
            <div>Animal Accessories</div>
            @await Component.InvokeAsync("AccessoriesSelection", @Model)
        }
    </div>
    <div class="col col-3">
        @await Component.InvokeAsync("BookingDetail", @Model)
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}