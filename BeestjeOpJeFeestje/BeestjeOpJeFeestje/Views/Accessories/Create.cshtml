@using BeestjeOpJeFeestje.Controllers
@model BeestjeOpJeFeestje.Models.Accessories

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Accessories</h4>
<hr/>
<script src="../../lib/jquery/dist/jquery.min.js" type="text/javascript"></script>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="container" style="padding: 0">
                <div class="row">
                    <div class="col-sm">
                        @Html.DropDownListFor(m => m.PicturePath, (List<SelectListItem>)ViewData["files"], "Please select an image", new { @class = "form-control target" })
                    </div>
                    <div class="col-sm">
                        <img id="EenImage" src="" />
                    </div>
                </div>
            </div>


            
            <script>
                $(document).ready(function() {
                    $( ".target" ).change(function(e) {
                        $( ".target option:selected" ).each(function() {

                            if ($(this).text() !== "Please select an image") {
                                $("#EenImage").attr("src", "/images/accessories/" + $(this).text() + ".png");
                            } else {
                                $("#EenImage").attr("src", "");
                            }
                        });
                    });
                });
            </script>

            <div class="form-group" style="padding-top: 10px">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}